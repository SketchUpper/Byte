            <androidx.cardview.widget.CardView
                android:id="@+id/Layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:visibility="gone">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/L1Subj"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="КПиЯП"
                            android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

                        <TextView
                            android:id="@+id/L1Teacher"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Иванов И.И."/>

                        <TextView
                            android:id="@+id/L1Place"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="4dp"
                            android:text="409"
                            app:drawableLeftCompat="@drawable/map_marker_16"
                            app:drawableStartCompat="@drawable/map_marker_16"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="16dp"
                        android:layout_gravity="end">

                        <TextView
                            android:id="@+id/L1Time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="4dp"
                            android:gravity="center"
                            android:text="08:00 - 09:35"
                            app:drawableLeftCompat="@drawable/clock_outline_16"
                            app:drawableStartCompat="@drawable/clock_outline_16" />

                    </LinearLayout>

                </FrameLayout>

            </androidx.cardview.widget.CardView>

